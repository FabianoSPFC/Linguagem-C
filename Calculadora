#include<stdio.h>
#include<math.h>
#include<locale.h>
#include<stdlib.h>


float Soma ( double x, double y ){
	float res;
	res = x + y;
	return res;
}

float Sub ( double x, double y ){
	float res;
	res = x - y;
	return res;
}

float Multi ( double x, double y ){
	float res;
	res = x * y;
	return res;
}

float Div ( double x, double y ){
	float res;
	res = x / y;
	return res;
}

float Pot (double x, double y ){
	float res;
	res = pow(x,y);
	return res;
}

/*float Eq (double x, double y ){
	float res;
	res = pow(x,y);
	return res;
}*/

float Rq (double x, double y ){
	float res;
	res = pow(x,(1/y));
	return res;
}

float ang_sen (double x ){
	float res, pi=3.1415;
	res = sin(x*pi/180);
	return res;
}

float ang_coss (double x ){
	float res, pi=3.1415;
	res = cos(x*pi/180);
	return res;
}

float ang_tang (double x ){
	float res, pi=3.1415;
	res = tan(x*pi/180);
	return res;
}

float Cel_Kel (double x ){
	float res;
	res = (x + 273);
	return res;
}

 float Cel_Far (double x ){
	float res;
	res =  ((9*x + 160)/5);
	return res;
}

float Kel_Far (double x ){
	float res;
	res = ((9*x - 2297)/5);
	return res;
}

float Kel_Cel (double x ){
	float res;
	res = (x - 273);
	return res;
}

float Far_Cel (double x ){
	float res;
	res = ((5*(x - 32))/9);
	return res;
}

float Far_Kel (double x ){
	float res;
	res = ((5*x + 2297)/9);
	return res;
}

void calculo (float p, float h){
			
			float imc;
		
			imc=p/(pow(h,2));
			
			printf("\nO seu imc foi de: %.2f\n\n", imc);
			
			if (imc<18.5){
					printf("Abaixo do Peso\n", imc);	
				}else{
						if ((imc>=18.5) && (imc<24.9)){
							printf("Peso Normal\n");
				}else{	if((imc>=25) && (imc<29)){
							printf("Sobrepeso", imc);
				}else{		
						if (imc>= 30 && imc<34.9){
						printf("Obesidade de Grau 1\n",imc);
				}else{
						if (imc>=35 && imc<39.9){
							printf("Obesidade de Grau 2\n",imc);
		
				}else{
					if (imc>40)
						printf("Obesidade de Grau 3\n",imc);
			
					}
				}		
			}
		}
	}
}

float resultados(char sexo, float h){
	float tot;
		if ((sexo == 'M') || (sexo == 'm'))
			tot=(72.7*h)-58;
		else 
			if ((sexo == 'F') || (sexo == 'f'))
				tot=(62.1*h)-44.7;
			return tot;				
}


